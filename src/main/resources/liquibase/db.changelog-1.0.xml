<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="PAVELS" id="changelog-1.0">
        <createTable tableName="Book">
            <column name="id" type="long" autoIncrement="true">
                <constraints nullable="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="authorId" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="publisherId" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="pages" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="Person">
            <column name="id" autoIncrement="true" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="bookCount" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="Publisher">
            <column name="id" autoIncrement="true" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="bookCount" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="publisherId"
                                 baseTableName="Book"
                                 constraintName="fkBookPublisher"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="Publisher"/>
        <addForeignKeyConstraint baseColumnNames="authorId"
                                 baseTableName="Book"
                                 constraintName="fkBookAuthor"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="Person"/>


    </changeSet>
</databaseChangeLog>